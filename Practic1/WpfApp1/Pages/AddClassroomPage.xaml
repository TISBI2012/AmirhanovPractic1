<Page x:Class="WpfApp1.Pages.AddClassroomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавить класс">
    <Grid>
    <Button Content="Назад" Click="GoBack_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
        <TextBlock Text="Номер класса:" VerticalAlignment="Center"/>
        <TextBox x:Name="classNumberBox" Width="200" Margin="5"/>

        <TextBlock Text="Количество рабочих мест:" VerticalAlignment="Center"/>
        <TextBox x:Name="computerSeatsBox" Width="200" Margin="5"/>

        <Button Content="Добавить класс" Click="AddClassroom"/>

    </StackPanel>
    </Grid>
</Page>
