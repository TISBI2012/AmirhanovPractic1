<Page x:Class="WpfApp1.Pages.RegistryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegistryPage">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="userNameBox" Width="200" />
            <PasswordBox x:Name="userPasswordBox" Width="200" />
            <Button Content="Зарегистрироваться" Click="Registry_Click"/>
            <Button Content="У вас уже есть аккаунт" Click="GoToLoginPage_Click"/>
        </StackPanel>
    </Grid>
</Page>
