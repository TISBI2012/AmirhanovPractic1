<Page x:Class="WpfApp1.Pages.AddComputerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавить компьютер">

    <Grid Margin="10">
        <Button Content="Назад" Click="GoBack_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <StackPanel>
            <TextBlock Text="IP компьютера:"/>
            <TextBox x:Name="ipBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="ID класса:"/>
            <TextBox x:Name="classroomIdBox" Width="50" Margin="0,0,0,10"/>

            <TextBlock Text="Состояние:"/>
            <ComboBox x:Name="stateComboBox" Width="150" Margin="0,0,0,10">
                <ComboBoxItem Content="Включен"/>
                <ComboBoxItem Content="Выключен"/>
            </ComboBox>

            <Button Content="Добавить компьютер" Click="AddComputer" Width="150"/>
        </StackPanel>
    </Grid>
</Page>
